@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h3 class="mb-4">Explore all available Todo tasks!</h3>
</div>

<div id="todo-container" class="my-5">
    <table id="todo-table" align="center">
        <tr>
            <th>Todo Description</th>
            <th>Is Complete</th>
            <th>Actions</th>
        </tr>
    </table>
</div>

<div id="create-todo" class="col-sm-6 mx-auto text-center">
    <h2>Create new Todo</h2>
    <div class="form-group row">
        <div class="col-sm">
            <input type="text" class="form-control todo-text" required placeholder="Text...">
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm">
            <div class="form-check">
                <input id="is-complete" class="form-check-input todo-is-complete" type="checkbox">
                <label class="form-check-label" for="is-complete">
                    Is Complete
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm">
            <button type="submit" class="btn btn-success todo-button-create">Add todo</button>
        </div>
    </div>
</div>
